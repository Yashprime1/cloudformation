{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters":{
        "RegionPrefix":{
            "Type":"String",
            "Default":""
        }
    },
    "Mappings": {
        "AWSAMIMapping": {
           "ap-south-1": {
              "HVM64" : "ami-0e742cca61fb65051"
           },
           "ap-northeast-2": {
              "HVM64": "ami-0994dc69c39c35834"
           },
           "eu-west-1": {
              "HVM64": "ami-04bf55d5e589debe9"
           }
        }
     },
    "Resources":{
        "BatchInstanceIamRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
              "AssumeRolePolicyDocument": {
                "Statement": [
                  {
                    "Sid": "",
                    "Effect": "Allow",
                    "Principal": {
                      "Service": [
                        {
                          "Fn::Join": [
                            ".",
                            [
                              "ec2",
                              "amazonaws.com"
                            ]
                          ]
                        },
                        {
                          "Fn::Join": [
                            ".",
                            [
                              "ecs-tasks",
                              "amazonaws.com"
                            ]
                          ]
                        }
                      ]
                    },
                    "Action": "sts:AssumeRole"
                  }
                ]
              },
              "Path": "/",
              "RoleName": {
                "Fn::Join": [
                  "-",
                  [
                    {
                      "Ref": "AWS::StackName"
                    },
                    "BatchInstanceIamRole"
                  ]
                ]
              }
            }
          },
        "BatchInstanceIamPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
              "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Effect": "Allow",
                    "Action": [
                      "ecs:CreateCluster",
                      "ecs:DeregisterContainerInstance",
                      "ecs:DiscoverPollEndpoint",
                      "ecs:Poll",
                      "ecs:RegisterContainerInstance",
                      "ecs:StartTelemetrySession",
                      "ecs:UpdateContainerInstancesState",
                      "ecs:Submit*",
                      "ecr:GetAuthorizationToken",
                      "logs:CreateLogStream",
                      "logs:PutLogEvents"
                    ],
                    "Resource": "*"
                  },
                  {
                    "Effect": "Allow",
                    "Action": [
                      "s3:ListBucket",
                      "s3:GetObject",
                      "s3:GetObjectVersion"
                    ],
                    "Resource": "*"
                  },
                  {
                    "Sid": "AllowSsmAgentToFunction",
                    "Effect": "Allow",
                    "Action": [
                      "ec2messages:*",
                      "ssm:ListAssociations",
                      "ssm:ListInstanceAssociations"
                    ],
                    "Resource": "*"
                  },
                  {
                    "Sid": "AllowTwoWayWebsocketChannelComminicationBetweenTheClientBrowserOrCliAndRemoteManagedInstance",
                    "Effect": "Allow",
                    "Action": [
                      "ssmmessages:*",
                      "ssm:UpdateInstanceInformation"
                    ],
                    "Resource": "*"
                  },
                  {
                    "Sid": "AllowSsmToGetS3EncryptionConfiguration",
                    "Effect": "Allow",
                    "Action": [
                      "s3:GetEncryptionConfiguration"
                    ],
                    "Resource": "*"
                  },
                  {
                    "Sid": "AllowSSMAgentToGetKMSGeneratedDataKeyWhenAccessingS3Bucket",
                    "Effect": "Allow",
                    "Action": [
                      "kms:GenerateDataKey",
                      "kms:Decrypt"
                    ],
                    "Resource": "*"
                  },
                  {
                    "Sid": "AllowBootstrapViaCloudInitToBeAbleToDescribeTags",
                    "Effect": "Allow",
                    "Action": [
                      "ec2:DescribeTags"
                    ],
                    "Resource": "*"
                  }
                ]
              },
              "PolicyName": {
                "Fn::Join": [
                  "-",
                  [
                    {
                      "Ref": "AWS::StackName"
                    },
                    "BatchInstanceIamPolicy"
                  ]
                ]
              },
              "Roles": [
                {
                  "Ref": "BatchInstanceIamRole"
                }
              ]
            }
          },
        "BatchInstanceIamInstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
              "Path": "/",
              "Roles": [
                {
                  "Ref": "BatchInstanceIamRole"
                }
              ]
            }
        },
        "BatchEc2KeyPair":{
            "Type" : "AWS::EC2::KeyPair",
            "Properties" : {
                "KeyName" : "BatchEc2KeyPair"
            }
        },
        "BatchComputeEnvironmentEc2LaunchTemplate":{
            "Type": "AWS::EC2::LaunchTemplate",
            "Properties": {
                "LaunchTemplateName": "BatchComputeEnvironmentEc2LaunchTemplate",
                "LaunchTemplateData": {
                    "BlockDeviceMappings": [
                        {
                            "DeviceName": "/dev/xvda",
                            "Ebs": {
                                "DeleteOnTermination": true,
                                "VolumeSize": 30,
                                "VolumeType": "gp2"
                            }
                        }
                    ],
                    "InstanceType": "c4.large",
                    "KeyName":  {"Ref": "BatchEc2KeyPair"},
                    "SecurityGroupIds": [
                        {
                            "Fn::ImportValue": 
                            {
                                "Fn::Sub": "${RegionPrefix}-MongoInstanceSecurityGroupId"
                            }
                        }
                    ]
                }
            }
        },
        "BatchFargateComputeEnvironment": {
            "Type": "AWS::Batch::ComputeEnvironment",
            "Properties": {
                "Type": "MANAGED",
                "ComputeResources": {
                    "MaxvCpus": 2,
                    "SecurityGroupIds": [
                        {
                            "Fn::ImportValue": 
                            {
                                "Fn::Sub": "${RegionPrefix}-MongoInstanceSecurityGroupId"
                            }
                        }
                    ],
                    "Type": "FARGATE",
                    "Subnets": [
                        {
                            "Fn::ImportValue": 
                            {
                                "Fn::Sub": "${RegionPrefix}-public-subnet-1-id"
                            }
                        },
                        {
                            "Fn::ImportValue": 
                            {
                                "Fn::Sub": "${RegionPrefix}-public-subnet-2-id"
                            }
                        },
                        {
                            "Fn::ImportValue": 
                            {
                                "Fn::Sub": "${RegionPrefix}-public-subnet-3-id"
                            }
                        }
                    ]
                },
                "State": "ENABLED"
            }
        },
        "BatchEc2ComputeEnvironment": {
          "Type": "AWS::Batch::ComputeEnvironment",
          "Properties": {
              "Type": "MANAGED",
              "ComputeResources": {
                  "LaunchTemplate": {
                      "LaunchTemplateName": "BatchComputeEnvironmentEc2LaunchTemplate",
                      "Version": {
                          "Fn::GetAtt": [
                              "BatchComputeEnvironmentEc2LaunchTemplate",
                              "LatestVersionNumber"
                          ]
                      }
                  },
                  "MinvCpus":1,
                  "MaxvCpus": 2,
                  "SecurityGroupIds": [
                      {
                          "Fn::ImportValue": 
                          {
                              "Fn::Sub": "${RegionPrefix}-MongoInstanceSecurityGroupId"
                          }
                      }
                  ],
                  "Type": "EC2",
                  "Subnets": [
                      {
                          "Fn::ImportValue": 
                          {
                              "Fn::Sub": "${RegionPrefix}-public-subnet-1-id"
                          }
                      },
                      {
                          "Fn::ImportValue": 
                          {
                              "Fn::Sub": "${RegionPrefix}-public-subnet-2-id"
                          }
                      },
                      {
                          "Fn::ImportValue": 
                          {
                              "Fn::Sub": "${RegionPrefix}-public-subnet-3-id"
                          }
                      }
                  ],
                  "ImageId": {
                    "Fn::FindInMap": [
                      "AWSAMIMapping",
                      {
                        "Ref": "AWS::Region"
                      },
                      "HVM64"
                    ]
                  },
                  "InstanceRole": {
                    "Fn::GetAtt": [
                      "BatchInstanceIamInstanceProfile",
                      "Arn"
                    ]
                  },
                  "InstanceTypes":[ "c4.large" ],
                  "AllocationStrategy": "BEST_FIT_PROGRESSIVE"
              },
              "State": "ENABLED"
          }
      },
        "BatchSchedulingPolicy":{
            "Type" : "AWS::Batch::SchedulingPolicy",
            "Properties" : {
                "FairsharePolicy" : {
                  },
                "Name" : "SP"
              }
        },
        "BatchJobQueue": {
            "Type": "AWS::Batch::JobQueue",
            "Properties": {
                "ComputeEnvironmentOrder": [
                    {
                        "Order": 1,
                        "ComputeEnvironment": {
                            "Ref": "BatchEc2ComputeEnvironment"
                        }
                    }
                ],
                "State": "ENABLED",
                "Priority": 1,
                "Tags":
                {
                    "logical-id": "BatchJobQueue"
                },
                "SchedulingPolicyArn": {
                    "Ref": "BatchSchedulingPolicy"
                } 
            }
        },
        "BatchFargateJobDefinition":{
            "Type": "AWS::Batch::JobDefinition",
            "Properties": {
                "Type": "container",
                "ContainerProperties": {
                    "Image": "yashprime07/mydude:latest",
                    "Environment":[
                        {
                            "Name" : "dude",
                            "Value" : "venky"
                        }
                    ],
                    "ExecutionRoleArn" : {"Fn::GetAtt" : ["BatchInstanceIamRole", "Arn"]},
                    "LogConfiguration": {
                        "LogDriver": "awslogs"
                    },
                    "NetworkConfiguration": {
                        "AssignPublicIp": "ENABLED"
                    },
                    "ResourceRequirements": [
                        {
                            "Type": "VCPU",
                            "Value": "0.25"
                        },
                        {
                            "Type": "MEMORY",
                            "Value": "512"
                        }
                    ]
                },
                "RetryStrategy": {
                    "Attempts": 1
                },
                "Tags":
                {
                    "logical-id": "BatchFargateJobDefinition"
                },
                "PlatformCapabilities" : [ "FARGATE" ],
                "PropagateTags" : true,
                "SchedulingPriority" : 1
            }
        }, 
        "BatchEc2JobDefinition":{
          "Type": "AWS::Batch::JobDefinition",
          "Properties": {
              "Type": "container",
              "ContainerProperties": {
                  "Image": "yashprime07/mydude:latest",
                  "Environment":[
                      {
                          "Name" : "dude",
                          "Value" : "venky"
                      }
                  ],
                  "ExecutionRoleArn" : {"Fn::GetAtt" : ["BatchInstanceIamRole", "Arn"]},
                  "LogConfiguration": {
                      "LogDriver": "awslogs"
                  },
                  "Vcpus":1,
                  "Memory":256,
                  "ReadonlyRootFilesystem": false,
                  "Privileged":false
              },
              "RetryStrategy": {
                  "Attempts": 1
              },
              "Tags":
              {
                  "logical-id": "BatchEC2JobDefinition"
              },
              "PlatformCapabilities" : [ "EC2" ],
              "PropagateTags" : true,
              "SchedulingPriority" : 1
          }
      }
    }
}