{
    "AWSTemplateFormatVersion":"2010-09-09",
    "Parameters":{
        "RegionPrefix":{
            "Type":"String",
            "Default":""
        }
    },
    "Resources":{
        "PublicTrafficToAirflowInstanceSecurityGroupIngressRule":{
            "Type":"AWS::EC2::SecurityGroupIngress",
            "Properties":{
                "GroupId":{
                    "Fn::ImportValue":{
                        "Fn::Join":[
                            "-",
                            [
                                {
                                    "Ref":"RegionPrefix"
                                },
                                "AirflowInstanceSecurityGroupId"
                            ]
                        ]
                    }
                },
                "IpProtocol":"tcp",
                "FromPort":"80",
                "ToPort":"80",
                "CidrIp":"0.0.0.0/0"
            }
        },
        "PublicTrafficSSHToAirflowInstanceSecurityGroupIngressRule":{
            "Type":"AWS::EC2::SecurityGroupIngress",
            "Properties":{
                "GroupId":{
                    "Fn::ImportValue":{
                        "Fn::Join":[
                            "-",
                            [
                                {
                                    "Ref":"RegionPrefix"
                                },
                                "AirflowInstanceSecurityGroupId"
                            ]
                        ]
                    }
                },
                "IpProtocol":"tcp",
                "FromPort":"22",
                "ToPort":"22",
                "CidrIp":"0.0.0.0/0"
            }
        }
    }
}