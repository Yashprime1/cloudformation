{
    "AWSTemplateFormatVersion":"2010-09-09",
    "Parameters":{
        "RegionPrefix":{
            "Type":"String",
            "Default":""
        }
    },
    "Resources":{
        "IRISLoadBalancerToIRISInstanceSecurityGroupIngressRule":{
            "Type":"AWS::EC2::SecurityGroupIngress",
            "Properties":{
                "GroupId":{
                    "Fn::ImportValue":{
                        "Fn::Join":[
                            "-",
                            [
                                {
                                    "Ref":"RegionPrefix"
                                },
                                "IRISInstanceSecurityGroupId"
                            ]
                        ]
                    }
                },
                "SourceSecurityGroupId":{
                    "Fn::ImportValue":{
                        "Fn::Join":[
                            "-",
                            [
                                {
                                    "Ref":"RegionPrefix"
                                },
                                "IRISLoadBalancerSecurityGroupId"
                            ]
                        ]
                    }
                },
                "IpProtocol":"tcp",
                "FromPort":"3000",
                "ToPort":"3000"
            }
        }
    }
}